{
  "name": "apollo-angular",
  "description": "Use your GraphQL data in your Angular app, with the Apollo Client",
  "version": "1.1.2",
  "author": "Kamil Kisiela <kamil.kisiela@gmail.com> (http://github.com/kamilkisiela/)",
  "license": "MIT",
  "sideEffects": false,
  "main": "./build/bundle.umd.js",
  "module": "./build/src/index.js",
  "jsnext:main": "./build/src/index.js",
  "typings": "./build/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "apollographql/apollo-angular"
  },
  "scripts": {
    "build": "./node_modules/.bin/ngc -p tsconfig.build.json",
    "build:testing": "./node_modules/.bin/ngc -p testing/tsconfig.build.json",
    "bundle": "rollup -c rollup.config.js",
    "bundle:testing": "rollup -c testing/rollup.config.js",
    "test": "yarn test-only",
    "posttest": "yarn test:testing",
    "test-only": "jest --config jest.config.js",
    "test:testing": "jest --config testing/jest.config.js",
    "lint": "tslint -c ../../tslint.json -p tsconfig.json {src,tests}/**/*.ts",
    "lint:testing": "tslint -c ../../tslint.json -p testing/tsconfig.json testing/{src,tests}/**/*.ts",
    "postlint": "yarn lint:testing",
    "postbuild": "yarn bundle && yarn build:testing",
    "postbuild:testing": "yarn bundle:testing",
    "deploy": "../../scripts/deploy.sh ./scripts/testing.sh"
  },
  "peerDependencies": {
    "@angular/core": "^6.0.0",
    "apollo-client": "^2.0.0",
    "apollo-link": "^1.0.0",
    "rxjs": "^6.0.0",
    "zone.js": "~0.8.20"
  },
  "devDependencies": {
    "@angular/common": "6.1.0",
    "@angular/compiler": "6.1.0",
    "@angular/compiler-cli": "6.1.0",
    "@angular/core": "6.1.0",
    "@angular/platform-browser": "6.1.0",
    "@angular/platform-browser-dynamic": "6.1.0",
    "@types/graphql": "0.13.3",
    "@types/jest": "23.3.0",
    "apollo-cache-inmemory": "1.2.6",
    "apollo-client": "2.3.7",
    "apollo-link": "1.2.2",
    "graphql": "0.13.2",
    "graphql-tag": "2.9.2",
    "jest": "23.4.1",
    "jest-zone-patch": "0.0.8",
    "rollup": "0.63.4",
    "rxjs": "6.2.2",
    "ts-jest": "23.0.1",
    "typescript": "3.0.1",
    "zone.js": "0.8.26"
  }
}
